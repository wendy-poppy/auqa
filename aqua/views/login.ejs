<% include header %>

<div class="page" style="margin-top: 20px;">
    <div class="container">
        <div class="row">
            <div class="col-sm-6">
                <h1 class="page-header">Sign in</h1>
                <form>
                    <filedset>
                        <div class="form-group">
                            <label class="control-label">Username or email</label>
                            <input type="text" autocapitalize="off" class="form-control" name="username">
                        </div>
                        <div class="form-group">
                            <label class="control-label">Password</label>
                            <input type="text" autocapitalize="off" class="form-control" name="password">
                        </div>
                        <div class="form-group">
                            <button type="submit" class="btn btn-primary">Sign in</button>
                            <a href="/forgot" class="btn btn-link">Forgot your password?</a>
                        </div>
                    </filedset>
                </form>
            </div>
        </div>
    </div>
</div>

<% include footer %>